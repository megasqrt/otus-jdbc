<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="001-createAndInsertEmployee" author="kan" context="update" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="employee"/>
            </not>
        </preConditions>

        <createTable tableName="employee">
            <column name="employee_id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="lastname" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="firstname" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="middlename" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="position_id" type="NUMERIC(19,0)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <loadData encoding="UTF-8" file="liquibase/data/employee.csv" tableName="employee" separator=";">
            <column name="employee_id" type="NUMERIC"/>
            <column name="lastname" type="STRING"/>
            <column name="firstname" type="STRING"/>
            <column name="middlename" type="STRING"/>
            <column name="position_id" type="NUMERIC"/>
        </loadData>
    </changeSet>

    <changeSet id="002-createAndInsertdata" author="kan" context="update" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="employeedata"/>
            </not>
        </preConditions>

        <createTable tableName="employeedata">
            <column name="data_id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <loadData encoding="UTF-8" file="liquibase/data/data.csv" tableName="employeedata" separator=";">
            <column name="data_id" type="NUMERIC"/>
            <column name="name" type="STRING"/>
            <column name="value" type="STRING"/>
        </loadData>
    </changeSet>

    <changeSet id="003-createAndInsertTask" author="kan" context="update" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="task"/>
            </not>
        </preConditions>

        <createTable tableName="task">
            <column name="task_id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="priority" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <loadData encoding="UTF-8" file="liquibase/data/task.csv" tableName="task" separator=";">
            <column name="task_id" type="NUMERIC"/>
            <column name="title" type="STRING"/>
            <column name="description" type="STRING"/>
            <column name="status" type="STRING"/>
            <column name="priority" type="STRING"/>
        </loadData>
    </changeSet>

    <changeSet id="004-createAndInsertEmployeeGroup" author="kan" context="update" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="employeegroup"/>
            </not>
        </preConditions>

        <createTable tableName="employeegroup">
            <column name="group_id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <loadData encoding="UTF-8" file="liquibase/data/group.csv" tableName="employeegroup" separator=";">
            <column name="group_id" type="NUMERIC"/>
            <column name="name" type="STRING"/>
        </loadData>
    </changeSet>

    <changeSet id="005-createAndInsertEmployee_and_Group" author="kan" context="update" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="employee_group"/>
            </not>
        </preConditions>

        <createTable tableName="employee_group">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="employee_id" type="NUMERIC(19,0)">
                <constraints nullable="false"/>
            </column>
            <column name="group_id" type="NUMERIC(19,0)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <loadData encoding="UTF-8" file="liquibase/data/employee_group.csv" tableName="employee_group" separator=";">
            <column name="id" type="NUMERIC"/>
            <column name="employee_id" type="NUMERIC"/>
            <column name="group_id" type="NUMERIC"/>
        </loadData>
    </changeSet>

    <changeSet id="006-createAndInsertEmployee_and_task" author="kan" context="update" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="employee_task"/>
            </not>
        </preConditions>

        <createTable tableName="employee_task">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="employee_id" type="NUMERIC(19,0)">
                <constraints nullable="false"/>
            </column>
            <column name="task_id" type="NUMERIC(19,0)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <loadData encoding="UTF-8" file="liquibase/data/employee_task.csv" tableName="employee_task" separator=";">
            <column name="id" type="NUMERIC"/>
            <column name="employee_id" type="NUMERIC"/>
            <column name="task_id" type="NUMERIC"/>
        </loadData>
    </changeSet>
</databaseChangeLog>